{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./lib",
      "module": "esnext",
      "target": "es6",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "jsx": "react",
      "skipLibCheck": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": false,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "resolveJsonModule": true
    },
    "exclude": [
      "lib",
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.ts",
      "__tests__"
    ]
}